# F1 Results Scraper - Environment Configuration
# ==============================================
# Copy this file to .env and customize the values

# Basic Configuration
# -------------------
F1_DEFAULT_YEAR=2025
F1_OUTPUT_DIR=./output
F1_LOG_LEVEL=INFO

# Scraping Configuration
# ----------------------
F1_RATE_LIMIT=1.0
F1_REQUEST_TIMEOUT=15
F1_MAX_RETRIES=3
F1_USER_AGENT="Mozilla/5.0 (compatible; F1Scraper/2.0.0)"

# Output Configuration
# --------------------
F1_SAVE_CSV=true
F1_SAVE_JSON=true
F1_SAVE_EXCEL=false
F1_INCLUDE_DEBUG_HTML=false

# Database Configuration (Optional)
# ----------------------------------
# DATABASE_URL=postgresql://user:password@localhost:5432/f1_results
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=f1_results
# DB_USER=f1user
# DB_PASSWORD=securepassword

# API Configuration (Future features)
# ------------------------------------
# ERGAST_API_URL=http://ergast.com/api/f1
# F1_OFFICIAL_API_KEY=your_api_key_here
# ENABLE_CACHE=true
# CACHE_TTL=3600

# Notification Configuration (Optional)
# --------------------------------------
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
# EMAIL_SMTP_HOST=smtp.gmail.com
# EMAIL_SMTP_PORT=587
# EMAIL_USERNAME=your.email@gmail.com
# EMAIL_PASSWORD=your_app_password
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Cloud Storage Configuration (Optional)
# ---------------------------------------
# AWS_S3_BUCKET=f1-results-bucket
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1

# GCP_BUCKET_NAME=f1-results-bucket
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Development Configuration
# --------------------------
DEBUG_MODE=false
ENABLE_PROFILING=false
SAVE_RAW_HTML=false
VERBOSE_LOGGING=false

# Docker Configuration
# ---------------------
DOCKER_REGISTRY=docker.io
DOCKER_IMAGE_NAME=f1-results-scraper
DOCKER_TAG=latest

# Security Configuration
# -----------------------
# SSL_VERIFY=true
# PROXY_URL=http://proxy.example.com:8080
# PROXY_USERNAME=proxy_user
# PROXY_PASSWORD=proxy_pass

# Monitoring Configuration (Optional)
# ------------------------------------
# SENTRY_DSN=https://...@sentry.io/...
# PROMETHEUS_PORT=9090
# HEALTH_CHECK_PORT=8080

# Performance Configuration
# --------------------------
MAX_CONCURRENT_REQUESTS=1
MEMORY_LIMIT_MB=512
TIMEOUT_SECONDS=30
RETRY_BACKOFF_FACTOR=2

# Feature Flags
# -------------
ENABLE_EXCEL_EXPORT=false
ENABLE_DATABASE_STORAGE=false
ENABLE_REAL_TIME_UPDATES=false
ENABLE_DATA_VALIDATION=true
ENABLE_SUMMARY_STATS=true